#!/usr/bin/make -f
# -*- makefile -*-
# Sample debian/rules that uses debhelper.
# This file was originally written by Joey Hess and Craig Small.
# As a special exception, when this file is copied by dh-make into a
# dh-make output file, you may use that output file without restriction.
# This special exception was added by Craig Small in version 0.37 of dh-make.

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1
export PYBUILD_NAME=repomanager
export PYBUILD_DESTDIR_python2=debian/python-repomanager
export PYBUILD_DESTDIR_python3=debian/python3-repomanager

%:
	dh $@ --with llxsrc,i18n,zero,python2,python3 --buildsystem pybuild

override_dh_auto_install:
	dh_auto_install
	python3 setup3.py install --root $(CURDIR)/debian/python3-repomanager --prefix=/usr
	python3 setup3.py clean --all
	python setup.py install --root $(CURDIR)/debian/python-repomanager --prefix=/usr
	python setup.py clean --all

#override_dh_install:
#	marked-man docs/repoman.md > docs/repoman.1
#	dh_install
